<table id="bTable19"
       data-striped = "true"
       data-filter-control="true"
       data-filter-show-clear="true"
       data-toolbar="#filterbar"
       data-toggle="table"
       data-show-columns="true"
       data-pagination="true" 
       data-page-list="[5, 10, 20, 50, 100, 200]" 
