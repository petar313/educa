{# src/AppBundle/Resources/views/Program/index.html.twig #}

{% extends 'AppBundle::layout.html.twig' %}

{% block title %} {{'program.programs'|trans({}, 'messages')}} {% endblock %}

{% block page %}
    
{% block stylesheets %}
    
<style type="text/css">
    .butt {
        height:30px;
        width:30px;
        cursor:default !important;
    }
    </style>
 
{% endblock %} 
 <!-- Breadcrumb  -->
 
    <ol class='breadcrumb'><li>{{'katalog'|trans({}, 'messages')}}</li><li>{{'program.programs'|trans({}, 'messages')}}</li></ol>
    <div class="col-sm-12">   
    <div>
        <a href="{{ path('program_create') }}" class="btn btn-danger">{{'program.create'|trans({}, 'messages')}}</a>
    </div>    
 <div id="filterbar" ></div>
<table id="bTable9"
       data-striped = "true"
       data-filter-control="true"
       data-filter-show-clear="true"
       data-toolbar="#filterbar"
       data-toggle="table"
       data-show-columns="true"
       data-pagination="true" 
       data-page-list="[5, 10, 20, 50, 100, 200]" 
       data-resizable="true"
       class="table table-hover"
       data-cookie="true"
>
    <thead class="bTable-head">
    <tr>
        <th data-field="codeProgram" data-align="left" data-sortable="true" data-visible="false" >{{'program.code'|trans({}, 'messages')}}</th>
        <th data-field="name" data-align="left" data-sortable="true" >{{'program.name'|trans({}, 'messages')}}</th>
        <th data-field="targetGroup" data-align="left" data-sortable="true" >{{'program.target_group'|trans({}, 'messages')}}</th>
        <th data-field="description" data-align="left" data-visible="false" data-sortable="true" >{{'program.description'|trans({}, 'messages')}}</th>
        <th data-field="color" data-align="left" data-sortable="true" >{{'program.color'|trans({}, 'messages')}}</th>
        <th data-field="action" data-align="right"  > {{'action'|trans({}, 'messages')}} </th>
    </tr>
    </thead>
    <tbody>
        {%for program in programs%}
        <tr>
            <td>{{program.codeProgram}}</td>
            <td>{{program.name}}</td>
            <td>{{program.targetGroup}}</td>
            <td>{{program.description}}</td>
            <td><input class="butt" type="button" value="" style='background-color: {{program.color}};'/></td>
            <td>
                <a href="{{path("program_edit",{'id':program.id})}}">
                    <img src="{{ asset('bundles/app/images/icons/edit.png')}}" title="Izmjene programa" class="action-icons">
                </a> 
                <a href="{{path("program_delete",{'id':program.id})}}">
                    <img src="{{ asset('bundles/app/images/icons/delete.png')}}" title="Brisanje programa" class="action-icons">
                </a></td>
        </tr>
        {%endfor%}
    </tbody>
</table>
 
<div id="log">
</div>
        </div>
{%endblock%}  


{% block javascript %}
<script src="{{ asset("bundles/app/js/filter_table/jquery.base64.js")}}" type="text/javascript"></script>
<script src="{{ asset("bundles/app/js/bs-table/bootstrap-table.js")}}" type="text/javascript"></script>
<script src="{{ asset("bundles/app/js/bs-table/locale/bootstrap-table-#{app.request.getLocale()}.js")}}" type="text/javascript"></script> 
{%endblock%}
