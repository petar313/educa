{% form_theme form 'form/fields.html.twig' %}
{% extends 'AppBundle::layout.html.twig' %}
{% block title %} {{'course.delete'|trans({}, 'messages')}} {% endblock %}
{% block stylesheets %}
            <!--Core CSS -->

    <!--[if lt IE 9]>
    <script src="{{ asset("bundles/app/https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js")}}"></script>
    <script src="{{ asset("bundles/app/https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js")}}"></script>
    <![endif]-->
{% endblock %} 
{% block page %}
<div class="container">
    {% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="flash-notice">
            {{ flashMessage }}
        </div>
    {% endfor %}
<div class="form-signin">  
    <h2 class="form-signin-heading">{{'course.delete'|trans({}, 'messages')}}</h2>
    
         <div class="login-wrap">  
             {{'course.course'|trans({}, 'messages')}}: {{course.name}}
         </div>
       <div class="login-wrap">  
            {{ form(form) }}
       </div> 
       
        <div>
            <a href="{{ path('course_index') }}">{{'go_back'|trans({}, 'messages')}}</a>
        </div>
</div>
{% endblock %}